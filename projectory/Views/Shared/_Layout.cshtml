@using projectory.Common.StringConsts
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @LinkTexts.SiteName</title>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(LinkTexts.SiteName, DefaultActions.Index, ControllerNames.Home, new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink(LinkTexts.Home, DefaultActions.Index, ControllerNames.Home)
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(LinkTexts.PostPanel, DefaultActions.Index, ControllerNames.Ideas, null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(LinkTexts.RoleManager, RolesActions.ManageUsers, ControllerNames.Roles, null, new { @class = "nav-link" })
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <p class="copyright text-muted">Copyright &copy; Kurumi best waifu, fight me</p>
            </div>
        </div>
    </footer>
</body>
</html>
@Styles.Render(RenderRoutes.ContentCss)
@Scripts.Render(RenderRoutes.BootstrapBundle)
@Scripts.Render(RenderRoutes.JQueryVal)
@RenderSection("scripts", required: false)