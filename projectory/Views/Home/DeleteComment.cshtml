@using projectory.Common.StringConsts
@model projectory.Models.repository.Comment
<h2>DeleteConfirmation</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>

    @using (Html.BeginForm(HomeActions.DeleteCommentConfirmed, ControllerNames.Home, new { id = Model.Id, postId = Model.PostId }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink(LinkTexts.BackToPost, HomeActions.Info, new { id = Model.PostId }, new { @class = "btn btn-primary" })
        </div>
    }
</div>