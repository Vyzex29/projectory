@using projectory.Common.StringConsts
@model projectory.Models.Web.ViewModels.IndexViewModel

<header class="masthead" style="background-image: url(@FilePaths.Defaultbg">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Account Managment</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <h4>Change your account settings</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Password:</dt>
                <dd>
                    [
                    @Html.ActionLink(LinkTexts.ChangePassword, ManageActions.ChangePassword)
                    ]
                </dd>
                <dd>
                    [
                    @Html.ActionLink(LinkTexts.ChangeAvatar, ManageActions.ChangeAvatar)
                    ]
                </dd>
            </dl>
        </div>
    </div>
</div>

